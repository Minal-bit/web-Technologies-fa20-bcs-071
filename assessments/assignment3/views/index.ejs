<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>E-Learning</title>
  </head>
  <body>
    
    <div class="container mt-5">
      <h1 class="mb-3">Courses</h1>

      <!-- Update the course listing in index.ejs -->
      <ul class="list-group">
        <% courses.forEach((course) => { %>
        <li class="list-group-item">
          <h5><%= course.title %></h5>
          <p><%= course.description %></p>
          <p>Instructor: <%= course.instructor %></p>
          <p>Price: $<%= course.price %></p>
          <div>
            <a href="/courses/<%= course._id %>/edit" class="btn btn-primary"
              >Edit</a
            >
            <!-- Include the method-override package in index.ejs -->
            <form
              action="/courses/<%= course._id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
